{% load static %}
{% load crispy_forms_tags %}

<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <script src="{% static 'js/jquery-3.2.1.slim.min.js' %}"></script>
    <script src="{% static 'js/popper.min.js' %}"></script>
    <link rel="stylesheet" href="{% static 'css/bootstrap.min.css' %}">
    <script src="{% static 'js/bootstrap.min.js' %}"></script>
    <script crossorigin src="{% static 'js/react.development.js' %}"></script>
    <script crossorigin src="{% static 'js/react-dom.development.js' %}"></script>
    <script src="{% static 'js/clean-blog.min.js' %}"></script>

    <link rel="stylesheet" type="text/css" href="{% static 'css/styles.css' %}">
    <link rel="stylesheet" type="text/css" href="{% static 'css/clean-blog.min.css' %}">

    <!-- Custom fonts for this template -->
    <link href="{% static 'font-awesome/css/font-awesome.min.css' %}" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    {% block head %}

    <title>FrogBlog</title>

    {% endblock %}

  </head>

  <body>

    <!-- Navigation -->
    {% block nav %}
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand" href="{% url 'index' %}">Frog Blog</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="{% url 'index' %}">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{% url 'index' %}">Write</a>
            </li>
{% if user.is_authenticated %}
            <li class="nav-item">
              <a class="nav-link" href="{% url 'index' %}">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{% url 'index' %}">Log Out</a>
            </li>
            <li class="nav-item">
              <a>Logged in as {{ user }}</a>
            </li>
{% else %}
            <li class="nav-item">
              <a class="nav-link" href="{% url 'index' %}">Log In</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{% url 'index' %}">Register</a>
            </li>
{% endif %}
          </ul>
        </div>
      </div>
    </nav>
    {% endblock %}

    {% block header %}
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('{% static 'img/frog2.jpg' %}')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            {% block title %}
              <div class="site-heading">
                <h1>Frog Blog</h1>
             </div>
            {% endblock %}
          </div>
        </div>
      </div>
    </header>
    {% endblock %}

    {% block container %}
    <!-- Main Content -->
    <div class="container">

      {% block content %}

      {% endblock %}
    </div>
    {% endblock %}

    <hr>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <p class="copyright text-muted">Simple Demonstration by Andrew Hellinger</p>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>